/* pages/home/home.wxss */
page{  

   
  height:100%;  
}  
.whole{  
  
  width:100%;  
  height:100%;  
}  
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 10%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}
.integral{
  color: white;
}
.weui-grids{
   
   position: absolute; 
   top: 37%; 
   left: 15%;
   overflow: hidden;  
   margin-top: 10rpx; 
   width: 70%;
   height: auto;
   border-radius: 10px;
   
}
.weui-grid {  
  position: relative;  
  float: left;  
  padding: 20px 10px;  
  width: 50%;  
  height: auto;
  box-sizing: border-box;  
  background-color: white;
} 
.weui-grid__icon{
  width:60% ;
  padding-bottom: 25%;
} 
.weui-grid__icon image{
  width: 100%;
  text-align: center; 
}
.weui-grid__label{
  margin-top: 20%;
}

